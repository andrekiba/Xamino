<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Xamino.App">
    <Application.Resources>
        <ResourceDictionary>

            <!-- Application resource dictionary -->

            <Color x:Key="ColorPrimary">#FFA000</Color>
            <Color x:Key="ColorPrimaryDark">#FF6F00</Color>
            <Color x:Key="ColorPrimaryLight">#FFECB3</Color>
            <Color x:Key="ColorAccent">#FF4081</Color>

            <Color x:Key="GrayPrimary">#ADB7BE</Color>
            <Color x:Key="GrayLight">#ECF0F1</Color>
            <Color x:Key="GrayDark">#76828A</Color>
            <Color x:Key="GrayMedium">#9AA4AB</Color>

            <!--Material Design Colors-->
            <Color x:Key="Red">#F44336</Color>
            <Color x:Key="LightRed">#FC795B</Color>
            <Color x:Key="DeepOrange">#FF5722</Color>
            <Color x:Key="Orange">#FF9800</Color>
            <Color x:Key="Amber">#FFA000</Color>
            <Color x:Key="Yellow">#FFEB3B</Color>
            <Color x:Key="Pink">#E91E63</Color>
            <Color x:Key="DeepPurple">#673AB7</Color>
            <Color x:Key="Purple">#9C27C0</Color>
            <Color x:Key="LightPurple">#BA68C8</Color>
            <Color x:Key="Indigo">#3F51B5</Color>
            <Color x:Key="Blue">#5677fc</Color>
            <Color x:Key="DarkLightBlue">#1976D2</Color>
            <Color x:Key="LightBlue">#2196F3</Color>
            <Color x:Key="Cyan">#00bcd4</Color>
            <Color x:Key="Teal">#009688</Color>
            <Color x:Key="Green">#259b24</Color>
            <Color x:Key="LightGreen">#8BC34A</Color>
            <Color x:Key="Lime">#CDDC39</Color>
            <Color x:Key="Brown">#795548</Color>
            <Color x:Key="TextBlack">#212121</Color>
            <Color x:Key="Gray">#9e9e9e</Color>
            <Color x:Key="BlueGray">#607d8b</Color>
            <Color x:Key="Grey800">#424242</Color>

            <Style x:Key="BaseButtonStyle" TargetType="Button">
                <Setter Property="HorizontalOptions" Value="CenterAndExpand"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="HeightRequest" Value="50"/>
                <Setter Property="WidthRequest" Value="200"/>
                <Setter Property="MinimumWidthRequest" Value="300"/>
                <!--<Setter Property="BorderColor" Value="{StaticResource LightGreen}"/>-->
                <!--<Setter Property="BorderWidth" Value="1"/>-->
                <Setter Property="TextColor" Value="White" />
                <Setter Property="BorderRadius" Value="3" />
                <Setter Property="FontSize" Value="Large" />
                <Setter Property="BackgroundColor" Value="{StaticResource Teal}" />
            </Style>
            <Style x:Key="BaseLabelStyle" TargetType="Label">
                <Setter Property="HorizontalOptions" Value="StartAndExpand"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="HeightRequest" Value="30"/>
                <Setter Property="TextColor" Value="{StaticResource Teal}" />
                <Setter Property="FontSize" Value="Medium" />
            </Style>
            <Style x:Key="BaseEntryStyle" TargetType="Entry">
                <Setter Property="HorizontalOptions" Value="Fill"/>
                <Setter Property="VerticalOptions" Value="Center"/>
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontSize" Value="Medium" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>